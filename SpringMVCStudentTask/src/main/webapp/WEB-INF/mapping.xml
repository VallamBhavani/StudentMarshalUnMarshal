<mapping>
    <class name="com.nendrasys.model.StudentList">
        <field name="studentList" type="com.nendrasys.model.Student"
               collection="arraylist">
            <bind-xml name="student" />
        </field>
    </class>

    <class name="com.nendrasys.model.Student">
    <map-to xml="student" />

    <field name="id" type="integer">
        <bind-xml name="id" node="element" />
    </field>

    <field name="name" type="string">
        <bind-xml name="name" node="element" />
    </field>

    <field name="age" type="integer">
        <bind-xml name="age" node="element" />
    </field>
</class>
</mapping>